#include <stdio.h>
#include <stdlib.h>


int main()
{
    int a,i,j;
char c,c1;


    printf("Introduceti timp:\n");
    scanf("%d %d %d %c%c", &i,&j,&a,&c,&c1);
   while(i>11||j>60||a>60)
    {
        printf("Reintroduceti timp in format: ora minut secunda---\nTimp :");
        scanf("%d %d %d", &i,&j,&a);
    }
    a++;
    if(a==60)
    {
        a=0;
        j++;
    }
    if(j==60)
    {
        j=0;
        i++;
    }
if(i==12){
    i=0;
    if(c=='a')c='p';
    else c='a';

}


    printf("%02d:%02d:%02d %c%c",i,j,a,c,c1);

    return 0;
}
